# Server Configuration
NODE_ENV=development
PORT=3001
API_URL=http://localhost:3001

# Database
DATABASE_URL="postgresql://postgres:postgres@localhost:5432/wago_hub?schema=public"

# Authentication
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d

# Email Configuration (Nodemailer - video approval, welcome, etc.)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-specific-password
FROM_EMAIL=noreply@wagohub.com
FROM_NAME=WAGO Project Hub

# Transactional quote email (Resend)
RESEND_API_KEY=re_xxxxxxxxxxxx
EMAIL_FROM="WAIGO Sales <sales@waigo.app>"
EMAIL_BCC=

# File Upload
MAX_FILE_SIZE=50MB
UPLOAD_DIR=./uploads

# OneDrive OAuth (optional for MVP)
ONEDRIVE_CLIENT_ID=
ONEDRIVE_CLIENT_SECRET=
ONEDRIVE_REDIRECT_URI=http://localhost:3001/auth/onedrive/callback

# Frontend URL
FRONTEND_URL=http://localhost:5173

# CORS Origins (comma-separated)
CORS_ORIGINS=http://localhost:5173,http://localhost:3000
